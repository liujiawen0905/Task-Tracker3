server {
    listen 80;
    listen [::]:80;

    # TODO: This should be your server name.
    server_name tasks3.jiawensuperman.me

    location / {
        proxy_pass http://localhost:6000;
    }

    location /socket {
        proxy_pass http://localhost:6000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";	 	 
    }
}